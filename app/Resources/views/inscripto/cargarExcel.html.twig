{% extends 'base.html.twig' %}

{% block otherstylesheets %}
    <link href="{{ asset('vendor/sweetalert2/dist/sweetalert2.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('vendor/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block  page_slideleft %}
    {% include 'slide_left.html.twig' with {'menu': 3, 'submenu': 1}  %}
{% endblock %}

{% block toolbar %}

    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>Inscr&iacute;ptos <small><i class="fa fa-list"></i> Cargar excel de inscr&iacute;ptos. </small></h1>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <a href="#" class="back-subviews">
                <i class="fa fa-chevron-left"></i> BACK
            </a>
            <a href="#" class="close-subviews">
                <i class="fa fa-times"></i> CLOSE
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="toolbar-tools pull-right">
                    <!-- start: TOP NAVIGATION MENU -->
                    <ul class="nav navbar-right">
                        <!-- start: TO-DO DROPDOWN -->
                        <li class="dropdown">
                            <a href="{{ path('inscripto_new') }}">
                                <i class="fa fa-user-plus"></i> INSCR&Iacute;PTO
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="{{ path('cargarExcel') }}">
                                <i class="fa fa-upload" aria-hidden="true"></i> CARGAR EXCEL
                                <div class="tooltip-notification hide">
                                    <div class="tooltip-notification-arrow"></div>
                                    <div class="tooltip-notification-inner">
                                        <div>
                                            <div class="semi-bold">
                                                INSCR&Iacute;PTOS
                                            </div>
                                            <div class="message">
                                                Importar desde archivo de Excel
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <!-- end: TOP NAVIGATION MENU -->
                </div>
            {% endif %}
        </div>
    </div>
    <!-- end: TOOLBAR -->
{% endblock %}

{% block breadcrumb %}
    <!-- start: BREADCRUMB -->
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage') }}">
                        <i class="fa fa-home"></i> Inicio
                    </a>
                </li>
                <li>
                    <a href="{{ path('inscripto_index') }}">
                        <i class="fa fa-users"></i> Inscr&iacute;ptos
                    </a>
                </li>
                <li class="active">
                     <i class="fa fa-upload"></i> Cargar Excel
                </li>
            </ol>
        </div>
    </div>
    <!-- end: BREADCRUMB -->
{% endblock %}

{% block page_content %}
<div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Cargar excel de <strong>Inscriptos</strong></h3>
        </div>
        <div class="panel-body" style="
    height: 250px;">

        <div class="col-sm-4 col-sm-offset-2">
            <a href="#" onclick="$('#excel').click();">
                <div class="carga g">
                    <p class="text-center g"><i class="fa fa-upload" aria-hidden="true"></i> CARGA NORMAL</p>
                
                    <p style="text-align:center; font-size:15px;">En la carga del excel normal se realizan las validaciones correspondientes antes de dar de alta un inscripto. <br>
                     El sistema podria demorar algunos minutos. </p>
                </div>
            </a>
        </div>

        <div class="hide">
            <button type="button" class="btn btn-xs btn-primary" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Importar Excel de Inscriptos</button>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <div class="container">
                        <form id="form_input" class="form-inline" enctype="multipart/form-data" name="formHosp"action="{{path ("noCargados") }}" method="POST">
                            <div class="form-group">
                                <input type="file" name="excel"class="form-control" id="excel">
                            </div>
                            <button type="submit" class="btn btn-default">Importar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-sm-6">
            <div class="carga r">
                <a href="#" onclick="$('#excelRapida').click();">
                    <p class="text-center r"><i class="fa fa-upload" aria-hidden="true"></i> CARGA RAPIDA</p>
                
                    <p style="text-align:center; font-size:15px;">En la carga del excel rapida NO se realiza la validacion del inscripto antes de darlo de alta. <br>
                         El sistema solo demora algunos segundos.</p>
                </a>
            </div>
        </div>

        <div class="hide">
            <button type="button" class="btn btn-xs btn-primary" data-toggle="collapse" data-target="#collapseExample2" aria-expanded="false" aria-controls="collapseExample2">Importar Excel de Inscriptos</button>
            <div class="collapse" id="collapseExample2">
                <div class="card card-body">
                    <div class="container">
                        <form  id="form_rapida" enctype="multipart/form-data" action="{{path ("cargaRapida") }}" method="POST">

                            <input type="file" name="excelRapida" id="excelRapida">
     
                            <button type="submit" class="btn btn-default">Importar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}

{% block otherJavascript %}
    <script src="{{ asset('vendor/sweetalert2/dist/sweetalert2.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#excel').change(function () {
                //archivo = $('#excel');
                swal({
                    title: '¿Estas seguro?',
                    text: "Estas por importar el archivo excel con nombre: " + document.getElementById("excel").files.item(0).name + "!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    cancelButtonText: 'Cancelar',
                    confirmButtonText: 'Si, Importar'
                }).then((result) => {
                    if (result.value) {
                        $('#form_input').submit();
                        $('#okButton').hide();
                        $('#panel-config .modal-footer').show();
                        $('#panel-config button.close').hide();
                        $('#cancelButton').hide();
                        $('#panel-config .modal-title').html('Importando Inscriptos...');
                        $('#panel-config .modal-body').html('<div class="col-md-12  text-center"><i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i></div><div class="clearfix"></div>');
                        $('#panel-config').modal('toggle');
                        $('#panel-config').modal();
                    }
                });
            });
        });

        $(document).ready(function () {
            $('#excelRapida').change(function () {
                //archivo = $('#excel');
                swal({
                    title: '¿Estas seguro?',
                    text: "Estas por importar el archivo excel con nombre: " + document.getElementById("excelRapida").files.item(0).name + "!",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    cancelButtonText: 'Cancelar',
                    confirmButtonText: 'Si, Importar'
                }).then((result) => {
                    if (result.value) {
                        $('#form_rapida').submit();
                        $('#okButton').hide();
                        $('#panel-config .modal-footer').show();
                        $('#panel-config button.close').hide();
                        $('#cancelButton').hide();
                        $('#panel-config .modal-title').html('Importando Inscriptos...');
                        $('#panel-config .modal-body').html('<div class="col-md-12  text-center"><i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i></div><div class="clearfix"></div>');
                        $('#panel-config').modal('toggle');
                        $('#panel-config').modal();
                    }
                });
            });
        });


    </script>
{% endblock %}
