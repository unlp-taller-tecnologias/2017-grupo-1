{% extends 'base.html.twig' %}


{% block body %}
    <div class="col-md-4 col-md-offset-4">
        <div class="col-lg-12">
            <div class="page-header">
                <h3>Datelle de Inscripto</h3>
            </div>

            <dl class="dl-horizontal">
                <dt>Nroficha</dt>
                <dd>{{ inscripto.nroFicha }}</dd>
                <dt>Legajo</dt>
                <dd>{{ inscripto.legajo }}</dd>
                <dt>Fecha de inscripcion</dt>
                <dd>{% if inscripto.fechaInscripcion %}{{ inscripto.fechaInscripcion|date('Y-m-d') }}{% endif %}</dd>
                <dt>Nombre</dt>
                <dd>{{ inscripto.nombre }}</dd>
                <dt>Apellido</dt>
                <dd>{{ inscripto.apellido }}</dd>
                <dt>Email</dt>
                <dd>{{ inscripto.email }}</dd>
                <dt>Pais</dt>
                <dd>{{ inscripto.pais }}</dd>
                <dt>Provincia</dt>
                <dd>{{ inscripto.provincia }}</dd>
                <dt>Partido</dt>
                <dd>{{ inscripto.partido }}</dd>
                <dt>Localidad</dt>
                <dd>{{ inscripto.localidad }}</dd>
                <dt>Codigo postal</dt>
                <dd>{{ inscripto.codigoPostal }}</dd>
                <dt>Tipodo cumento</dt>
                <dd>{{ inscripto.tipoDocumento }}</dd>
                <dt>Nro documento</dt>
                <dd>{{ inscripto.nroDocumento }}</dd>
            </dl>                 

            <div style="width: 70px;margin-left: 50px;float: left;">
                {{ form_start(delete_form) }}
                    <input type="submit" class="btn btn-danger" value="Borrar" onclick="return confirm('Esta seguro de eliminar este inscripto?')">
                {{ form_end(delete_form) }}
            </div>

            <a href="{{ path('inscripto_edit', { 'id': inscripto.id }) }}"><button type="button" class="btn btn-warning">Editar</button></a>

            <a href="{{ path('inscripto_index') }}"><button type="button" class="btn btn-info">Volver</button></a> 

        </div>            
    </div>
{% endblock %}
