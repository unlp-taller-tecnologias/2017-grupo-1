{% extends 'base.html.twig' %}

{% block otherstyles %}
    <link href="{{ asset('vendor/sweetalert2/dist/sweetalert2.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('vendor/datatables.net-bs/css/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb breadcrumb-scv">
        <li>
            <a href="{{path('homepage')}}" ><i class="fa fa-home" aria-hidden="true"></i></a>
        </li>
        <li class="active">Usuarios</li>
    </ol>
{% endblock %}
{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Listado <strong>de Usuarios</strong></h3>
        </div>
        <div class="panel-body">
            <table id="usuarios_tabla" class="table table-condensed table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">Nombre de usuario</th>
                        <th class="text-center">Tipo</th>
                        <th class="text-center">Activo</th>
                        <th class="text-center">
                            <i class="fa fa-cogs" aria-hidden="true"></i>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for usuario in usuarios %}
                        <tr   {% if not usuario.isActive %} class="danger" {% endif %}>
                            <td class="text-center">{{ loop.index }}</td>
                            <td class="text-center">{{ usuario.username }}</td>
                            <td class="text-center"><strong>{{ usuario.getRol().getNombre() }}</strong></td>
                            <td class="text-center">
                                {% if usuario.isActive %}
                                    <i class="fa fa-check-circle text-success" aria-hidden="true"></i>
                                    <span class="hidden"  >SI</span>
                                {% else %}
                                    <i class="fa fa-ban text-danger" aria-hidden="true"></i>
                                    <span class="hidden"  >NO</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="text-center">
                                    <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}" class="btn btn-xs  btn-warning " data-placement="top" data-original-title="Ver acreditados del área">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    </a>
                                    {% if  usuario.isActive %}
                                        <a href="#" onclick="usuarioDelete({{ usuario.id }});" class="btn btn-xs  btn-danger " data-placement="top" data-original-title="Ver acreditados del área">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block otherjavascripts %}
    <script src="{{ asset('vendor/sweetalert2/dist/sweetalert2.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script>
                                            function usuarioDelete(idUsuario) {
                                                swal({
                                                    title: '¿Estas seguro?',
                                                    text: "Estas por eliminar un usuario del sistema!",
                                                    type: 'warning',
                                                    showCancelButton: true,
                                                    confirmButtonColor: '#3085d6',
                                                    cancelButtonColor: '#d33',
                                                    cancelButtonText: 'Cancelar',
                                                    confirmButtonText: 'Si, Eliminarlo'
                                                }).then((result) => {
                                                    if (result.value) {
                                                        swal(
                                                                'Eliminado!',
                                                                'El usuario ha sido eliminado del Sistema.',
                                                                'success'
                                                                );
                                                    }
                                                });
                                            }
                                            $(document).ready(function () {
                                                $('#usuarios_tabla').DataTable({
                                                    "dom": '<".col-md-2">frtip',
                                                    fnInitComplete: function () {
                                                        $('div.col-md-2').html('<a class="btn btn-xs btn-primary" href="{{path('usuario_new')}}"><i class="fa fa-user-plus" aria-hidden="true"></i> Nuevo</a>');
                                                    },
                                                    "autoWidth": false,
                                                    "language": {
                                                        "url": "{{ asset('vendor/datatables.net/Spanish.json') }}"
                                                    },
                                                    "columnDefs": [{
                                                            "searchable": false,
                                                            "orderable": false,
                                                            "targets": [0, 4]
                                                        }],
                                                    "order": [[1, 'asc']],
                                                    "iDisplayLength": 10,
                                                });
                                            });
    </script>
{% endblock %}