{% extends 'base.html.twig' %}

{% block otherstylesheets %}
    <link href="{{ asset('vendor/bootstrap-switch-master/dist/css/bootstrap3/bootstrap-switch.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block  page_slideleft %}
    {% include 'slide_left.html.twig' with {'menu': 7, 'submenu': 3}  %}
{% endblock %}

{% block toolbar %}
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>Reportes <small><i class="fa fa-user-plus"></i> Seleccion de vacunas para mostrar vencimiento. </small></h1>
            </div>
        </div>
    </div>
    <!-- end: TOOLBAR -->
{% endblock %}

{% block breadcrumb %}
    <!-- start: BREADCRUMB -->
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage') }}">
                        <i class="fa fa-home"></i> Inicio
                    </a>
                </li>
                <li class="active">
                    Seleccion de vacunas para ver su vencimiento
                </li>
            </ol>
        </div>
    </div>
    <!-- end: BREADCRUMB -->
{% endblock %}

{% block page_content %}
  <div class="panel">
    <div class="panel-heading">
      <h3>Mostrar <strong>Vencimiento</strong> De </h3>
    </div>
    <div class="panel-body">
      <form class="" action="{{path('reporte_show')}}" method="post" class="form-horizontal">
        <div class="form-group">
        {% for item in vac %}
          <div class="col-md-12">
            <div class="form-group">
              <label for="" class="col-md-3 control-label">{{item.nombre}}</label>
              <div class="col-md-6">
                <div class="input-group margin-bottom-sm">
                  <input type="checkbox" name="vac[]" value="{{item.id}}">
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
        <div class="col-md-9 text-right">
          <input class="btn btn-primary" type="submit" value="Ver resultados">
        </div>
      </form>
    </div>
  </div>
{% endblock %}
{% block otherJavascript %}
  <script src="{{ asset('vendor/bootstrap-switch-master/dist/js/bootstrap-switch.min.js') }}"></script>
  <script>
    $(document).ready(function () {
        $.fn.bootstrapSwitch.defaults.size = 'small';
        $.fn.bootstrapSwitch.defaults.onText = 'SI';
        $.fn.bootstrapSwitch.defaults.offText = 'NO';
        $.fn.bootstrapSwitch.defaults.offColor = 'danger';
        $("[name='vac[]']").bootstrapSwitch();
    });
  </script>
{% endblock %}
