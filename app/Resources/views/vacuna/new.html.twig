{% extends 'base.html.twig' %}
{% block  page_slideleft %}
    {% include 'slide_left.html.twig' with {'menu': 4, 'submenu': 2}  %}
{% endblock %}

{% block toolbar %}
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>Usuarios <small><i class="fa fa-user-plus"></i> Agregar un nuevo usuario en el sistema. </small></h1>
            </div>
        </div>
    </div>
    <!-- end: TOOLBAR -->
{% endblock %}

{% block breadcrumb %}
    <!-- start: BREADCRUMB -->
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage') }}">
                        <i class="fa fa-home"></i> Inicio
                    </a>
                </li>
                <li>
                    <a href="{{ path('usuario_index') }}">
                        Usuarios
                    </a>
                </li>
                <li class="active">
                    Nuevo
                </li>
            </ol>
        </div>
    </div>
    <!-- end: BREADCRUMB -->
{% endblock %}

{% block page_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Nueva <strong>Vacuna</strong></h3>
        </div>
        <div class="panel-body">
            {{ form_start(form, {'attr':{'class':'form-horizontal'} } ) }}
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="" class="col-md-3 control-label">Nombre</label>
                        <div class="col-md-6">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon">
                                    <i class="fa fa-keyboard-o"></i>
                                </span>
                                {{ form_widget(form.nombre,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="" class="col-md-3 control-label">Abreviatura</label>
                        <div class="col-md-6">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon">
                                    <i class="fa fa-keyboard-o"></i>
                                </span>
                                {{ form_widget(form.abreviatura,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="" class="col-md-3 control-label">Dosis requeridas</label>
                        <div class="col-md-2">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon">
                                    <i class="fa fa-keyboard-o"></i>
                                </span>
                                {{ form_widget(form.dosisRequeridas,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="" class="col-md-3 control-label">¿Tiene vencimiento?</label>
                        <div class="col-md-9">
                            <div class="input-group margin-bottom-sm">
                                {{ form_widget(form.tieneVencimiento,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="" class="col-md-3 control-label">¿Es obligatoria?</label>
                        <div class="col-md-9">
                            <div class="input-group margin-bottom-sm">
                                {{ form_widget(form.esObligatoria,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="" class="col-md-3 control-label">Observacion</label>
                        <div class="col-md-6">
                            <div class="input-group margin-bottom-sm">
                                <span class="input-group-addon">
                                    <i class="fa fa-keyboard-o"></i>
                                </span>
                                {{ form_widget(form.observacion,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9 text-right">
                <a href="{{ path("vacuna_todas") }}" class="btn btn-default">Volver</a>
                <input class="btn btn-primary" type="submit" name="submit" value="Guardar">
            </div>
            <div class="hidden">
                {{ form_rest(form) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block otherjavascripts %}
    <script src="{{ asset('vendor/bootstrap-switch-master/dist/js/bootstrap-switch.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $.fn.bootstrapSwitch.defaults.size = 'small';
            $.fn.bootstrapSwitch.defaults.onText = 'SI';
            $.fn.bootstrapSwitch.defaults.offText = 'NO';
            $("[name='appbundle_vacuna[tieneVencimiento]']").bootstrapSwitch();
            $("[name='appbundle_vacuna[esObligatoria]']").bootstrapSwitch();
        });
    </script>
{% endblock %}
