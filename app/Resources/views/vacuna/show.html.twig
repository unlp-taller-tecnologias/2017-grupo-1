{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vacuna</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vacuna.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ vacuna.nombre }}</td>
            </tr>
            <tr>
                <th>Abreviatura</th>
                <td>{{ vacuna.abreviatura }}</td>
            </tr>
            <tr>
                <th>Dosisrequeridas</th>
                <td>{{ vacuna.dosisRequeridas }}</td>
            </tr>
            <tr>
                <th>Tienevencimiento</th>
                <td>{% if vacuna.tieneVencimiento %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Esobligatoria</th>
                <td>{% if vacuna.esObligatoria %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ vacuna.observacion }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vacuna_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vacuna_edit', { 'id': vacuna.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
