                    $('div.col-md-4').html('<a href="{{ path('vacuna_new') }}"><button type="button" class="btn btn-xs btn-primary">Agregar una nueva vacuna</button></a>');
                },
                "language": {
                    "url": "{{ asset('vendor/datatables.net/Spanish.json') }}"
