{% extends 'base.html.twig' %}

{% block content %}

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="side-body">
			<div class="row">

				<h2 class="text-center">Alta Vacuna</h2>
										
				<form role="form" class="col-md-6 col-md-offset-3" style="background: white; padding: 50px;">
					
					<div class="form-group">
						<label for="nombre">Nombre</label>
						<input type="text" class="form-control" id="nombre" placeholder="Nombre de la vacuna">
					</div>

					<div class="form-group">
						<label for="abreviatura">Abreviatura</label>
						<input type="text" class="form-control" id="abreviatura" placeholder="Abreviatura de la vacuna">
					</div>

					<div class="form-group">
						<label for="docis">Docis requeridas</label>
						<input type="number" name="docis" id="docis" min="1" max="10" placeholder="1">
					</div>
					
					<div class="checkbox">
						<label>
							<input type="checkbox" id="Obligatioria"> Pertenece al calendario naciona de vacunacion?
						</label>
						<br>
						<label>
							<input type="checkbox" id="Obligatioria"> Tiene Vencimiento?
						</label>
					</div>

					<button type="submit" class="btn btn-primary">Enviar</button>

				</form>
			</div>

		</div>
	</div>


{% endblock %}