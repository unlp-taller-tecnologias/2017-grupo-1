{% extends 'base.html.twig' %}

{% block otherstylesheets %}
    <link href="{{ asset('vendor/sweetalert2/dist/sweetalert2.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('vendor/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block  page_slideleft %}
    {% include 'slide_left.html.twig' with {'menu': 3, 'submenu': 1}  %}
{% endblock %}

{% block toolbar %}
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>Registro de vacunacion</h1>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <a href="#" class="back-subviews">
                <i class="fa fa-chevron-left"></i> BACK
            </a>
            <a href="#" class="close-subviews">
                <i class="fa fa-times"></i> CLOSE
            </a>
            <div class="toolbar-tools pull-right">
                <!-- start: TOP NAVIGATION MENU -->
                <!-- end: TOP NAVIGATION MENU -->
            </div>
        </div>
    </div>
    <!-- end: TOOLBAR -->
{% endblock %}

{% block breadcrumb %}
    <!-- start: BREADCRUMB -->
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage') }}">
                        <i class="fa fa-home"></i> Inicio
                    </a>
                </li>
                <li>
                    <a href="{{path('inscripto_index')}}">visitantes</a>
                </li>
                <li class="active">Registro Vacunacion</li>
            </ol>
        </div>
    </div>
    <!-- end: BREADCRUMB -->
{% endblock %}

{% block page_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Editar Registro de vacunacion de <strong>{{ visitante.nombre }} {{visitante.apellido }}</strong></h3>
        </div>

        <div class="panel-body">
            <form class="form-inline" enctype="multipart/form-data" name="formRegistroVacunacion" action="{{path ("editar_registro_action") }}" method="POST">
                <input type="hidden" name="idVisitante" value="{{visitante.id}}">
                <input type="hidden" name="idRegistro" value="{{registrovacunacion.id}}">
                <h2>Vacunas del Calendario Nacional</h2>
                {% for vacuna in vacunas %}
                    {% if vacuna.esObligatoria %}
                        <div class="form-control-static text-extra-large" style="width: 200px;">
                            <label for="dosisRecibidas{{ loop.index }}"><h4>{{vacuna.nombre}}: </h4> </label>
                        </div>
                        <div class="form-control-static text-extra-large">
                            <label for="dosisRecibidas{{ loop.index }}">Dosis recibidas: </label>
                            <input type="number" id="dosisRecibidas{{ loop.index }}" class="form-control" name="dosisRecibidas{{ loop.index }}" placeholder="Dosis Recibidas"{% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %} value="{{componente.dosisRecibidas}}" {% endif %} {% endfor %}required />
                        </div>

                        {% if vacuna.tieneVencimiento %}
                            <div class="form-control-static text-extra-large">
                                <label for="vencimiento{{ loop.index }}">Vencimiento</label>
                                <input type="date" class="form-control" name="vencimiento{{ loop.index }}" id="vencimiento{{ loop.index }}" {% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %} {% if componente.vencimiento %}value="{{ componente.vencimiento | date("Y-m-d")}}"{% endif %} {% endif %} {% endfor %} />
                            </div>
                        {% endif %}

                        <div class="form-control-static text-extra-large">
                            <label for="comentario{{ loop.index }}">Comentario</label>
                            <input type="textarea" class="form-control" name="comentario{{ loop.index }}" id="comentario{{ loop.index }}" placeholder="comentario" {% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %}value="{{componente.comentario}}" {% endif %} {% endfor %} />
                        </div>
                            
                        <div class="checkbox">
                            <label><input name="cumple{{ loop.index }}" type="checkbox" {% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %}{% if componente.cumple %} checked {% endif %} {% endif %} {% endfor %}>Completo </label>
                        </div>

                        <input type="hidden" name="idComponente{{ loop.index }}" {% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %} value="{{componente.id}}" {% endif %} {% endfor %}>
                        <input type="hidden" name="cantVacunas" value="{{ loop.index }}">
                        <input type="hidden" name="idVacuna{{ loop.index }}" value="{{vacuna.id}}">
                        <br>
                    {% endif %}
                {% endfor %}
                <h2>Otras vacunas</h2>
                {% for vacuna in vacunas %}
                    {% if not vacuna.esObligatoria %}
                        <div class="form-control-static text-extra-large" style="width: 200px;">
                            <label for="dosisRecibidas{{ loop.index }}"><h4>{{vacuna.nombre}}: </h4> </label>
                        </div>
                        <div class="form-control-static text-extra-large">
                            <label for="dosisRecibidas{{ loop.index }}">Dosis recibidas: </label>
                            <input type="number" id="dosisRecibidas{{ loop.index }}" class="form-control" name="dosisRecibidas{{ loop.index }}" placeholder="Dosis Recibidas"{% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %} value="{{componente.dosisRecibidas}}" {% endif %} {% endfor %}required />
                        </div>

                        {% if vacuna.tieneVencimiento %}
                            <div class="form-control-static text-extra-large">
                                <label for="vencimiento{{ loop.index }}">Vencimiento</label>
                                <input type="date" class="form-control" name="vencimiento{{ loop.index }}" id="vencimiento{{ loop.index }}" {% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %} {% if componente.vencimiento %}value="{{ componente.vencimiento | date("Y-m-d")}}"{% endif %} {% endif %} {% endfor %} />
                            </div>
                        {% endif %}

                        <div class="form-control-static text-extra-large">
                            <label for="comentario{{ loop.index }}">Comentario</label>
                            <input type="textarea" class="form-control" name="comentario{{ loop.index }}" id="comentario{{ loop.index }}" placeholder="comentario" {% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %}value="{{componente.comentario}}" {% endif %} {% endfor %} />
                        </div>
                            
                        <div class="checkbox">
                            <label><input name="cumple{{ loop.index }}" type="checkbox" {% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %}{% if componente.cumple %} checked {% endif %} {% endif %} {% endfor %}>Completo </label>
                        </div>

                        <input type="hidden" name="idComponente{{ loop.index }}" {% for componente in componentes %} {% if componente.vacuna.id == vacuna.id %} value="{{componente.id}}" {% endif %} {% endfor %}>
                        <input type="hidden" name="cantVacunas" value="{{ loop.index }}">
                        <input type="hidden" name="idVacuna{{ loop.index }}" value="{{vacuna.id}}">
                        <br>
                    {% endif %}
                {% endfor %}

                 <!-- OBSERVACIONES PUBLICAS Y PRIVADAS -->
                <br><br><br>
                <div class="form-group">
                    <label for="comment">Observacion Privada:</label>
                    <textarea class="form-control" rows="5" cols="50" name="observacionPrivada" id="observacionPrivada" placeholder="OPCIONAL"></textarea>
                </div>
                <br><br>
                <div class="form-group">
                    <label for="comment">Observacion Publica:</label>
                    <textarea class="form-control" rows="5" cols="50" name="observacionPublica" id="observacionPublica" placeholder="OPCIONAL"></textarea>
                </div>
                <br>
                <!-- FIN OBSERVACIONES PUBLICAS Y PRIVADAS -->

                <div class="checkbox">
                    <label><input name="cumple" type="checkbox" {% if registrovacunacion.cumple %} checked {% endif %}> Cumple el registro de vacunacion</label>
                </div>
                <br><br>
                {% if visitante.tipo == "Inscripto" %}
                    <a href="{{path ("inscripto_index") }}" class="btn btn-default" >Volver</a>
                {% else %}
                    <a href="{{path ("nodocente_index") }}" class="btn btn-default" >Volver</a>
                {% endif %}
                <input class="btn btn-primary" type="submit" name="submit" value="Guardar">          
            </form>
        
            <div class="row">
                <div class="col-lg-6">
                    <div class="">
                        <h3>Observaciones</h3>
                    </div>
                    {% for observacion in observaciones %}
                        {% if observacion.esPrivada %}
                            <div class="panel panel-danger">
                                <div class="panel-heading">
                                    <p class="col-lg-11">Observacion Privada Creada el {{ observacion.fechaCreacion | date('d/m/Y')}} Por el usuario {{ observacion.creadoPor.username }}</p>
                                    <a href="{{ path('eliminar_observacion', { 'id': observacion.id, 'idVisitante': visitante.id }) }}"><p class="col-lg-1">Eliminar</p></a><br>
                                </div>
                        {% else %}
                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    <p class="col-lg-11">Observacion Privada Creada el {{ observacion.fechaCreacion | date('d/m/Y')}} Por el usuario {{ observacion.creadoPor.username }}</p>
                                    <a href="{{ path('eliminar_observacion', { 'id': observacion.id, 'idVisitante': visitante.id }) }}"><p class="col-lg-1">Eliminar</p></a><br>
                                </div>
                        {% endif %}
                                <div class="panel-body">
                                    {{ observacion.contenido }}
                                </div>
                            </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}