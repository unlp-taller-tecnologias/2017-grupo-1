{% extends 'base.html.twig' %}

{% block  page_slideleft %}
    {% include 'slide_left.html.twig' with {'menu': 3, 'submenu': 2}  %}
{% endblock %}

{% block toolbar %}
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>No Docentes <small><i class="fa fa-user-plus"></i> Agregar un nuevo no-docente en el sistema. </small></h1>
            </div>
        </div>
    </div>
    <!-- end: TOOLBAR -->
{% endblock %}

{% block breadcrumb %}
    <!-- start: BREADCRUMB -->
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('homepage') }}">
                        <i class="fa fa-home"></i> Inicio
                    </a>
                </li>
                <li>
                    <a href="{{ path('nodocente_index') }}">
                        No Docentes
                    </a>
                </li>
                <li class="active">
                    Nuevo
                </li>
            </ol>
        </div>
    </div>
    <!-- end: BREADCRUMB -->
{% endblock %}

{% block page_content %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Nuevo <strong>No docente</strong></h3>
    </div>
    <div class="panel-body">
        {{ form_start(form, {'attr':{'class':'form-horizontal'} } ) }}
        <div class="form-group">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Departamento</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.departamento,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Oficina</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.oficina,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Telefono</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </span>
                            {{ form_widget(form.telefono,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Funcion</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </span>
                            {{ form_widget(form.funcion,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Nombre</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.nombre,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Apellido</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.apellido,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Email</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                        {{ form_widget(form.email,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Pais</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.pais,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Provincia</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.provincia,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Partido</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.partido,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Localidad</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.localidad,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Codigo Postal</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.codigoPostal,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Tipo Documento</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.tipoDocumento,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Nro Documento</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.nroDocumento,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="" class="col-md-3 control-label">Fecha Nacimiento</label>
                    <div class="col-md-6">
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon">
                                <i class="fa fa-keyboard-o"></i>
                            </span>
                            {{ form_widget(form.fechaNacimiento,{'attr':{'class':'form-control'} }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9 text-right">
            <a href="{{ path("nodocente_index") }}" class="btn btn-default" >Volver</a>
            <input class="btn btn-primary" type="submit" name="submit" value="Guardar">
        </div>
        <div class="hidden">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
